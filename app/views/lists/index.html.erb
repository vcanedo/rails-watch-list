<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://www.cnnbrasil.com.br/wp-content/uploads/sites/12/2021/12/auditorium-2584269_1920.jpg);">
  <div class="container">
    <h1>Save any kind of movies</h1>
  </div>
</div>


<div class="container">

  <%= link_to 'Create a movie list', new_list_path, class: "btn btn-success mt-4" %>

  <div class="cards">

    <% @lists.each do |list| %>
      <%= link_to list_path(list), class: "card-category", style: "background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(#{list.image_url})" do %>
        <%= list.name %>
      <% end %>

    <% end %>

  </div>
</div>
