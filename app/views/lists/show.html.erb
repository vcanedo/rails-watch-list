<%= render '/partials/banner', list: @list %>

<div class="container">

  <div class="cards">

    <% @list.bookmarks.each do |bookmark| %>

      <div class="card-trip rounded">

        <%= image_tag bookmark.movie.poster_url %>

          <div class="card-trip-infos">

            <%= link_to bookmark_path(bookmark), class: 'remove', data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } do %>
              <i class="fa-solid fa-trash-can"></i>
            <% end %>

            <div>
              <h2><%= bookmark.movie.title %></h2>
              <p><%= bookmark.movie.overview %></p>
              <h2 class="comment"><i class="quotes fa-solid fa-quote-left"></i><%= bookmark.comment %></h2>
            </div>

            <h2 class="card-trip-pricing"><%= bookmark.movie.rating %><i class="fa-solid fa-star"></i></h2>

          </div>
      </div>
    <% end %>
  </div>
  <div class="my-4">
    <%= render 'partials/bookmark_form', bookmark: @bookmark, list: @list %>
  </div>
</div>
